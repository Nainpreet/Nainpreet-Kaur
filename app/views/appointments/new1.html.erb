<%=button_to 'Back', new_appointment_path, method: :get %>
<%= form_tag("/appointment/create", method:"post") do %>
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden" />
  <div class="form-group">
    <%= label_tag "Deaprtment : " %>
    <%= @doctors.department.name %>
  </div>

  <div class="form-group">
    <%= label_tag "Doctor : " %>
    <%= @doctors.user.name %>
  </div>

  <div class="form-group">
    <%= label_tag "Available Time slots : " %>
    <%= select_tag 'time_slots', options_for_select(time_slots_dropdown), {:include_blank=> false, :include_hidden => false, :prompt => 'Select'} %>
  </div>

  <div class="form-group">
    <%= label_tag "Available Days : " %>
    <%= select_tag 'days', options_for_select(days_dropdown2), {:prompt => 'Select'} %>
  </div>

  <div class="form-group">
    <%= label_tag "Symptoms : " %>
    <%= text_field_tag :symptoms %>
  </div>
  <input type="hidden" name="doctor_id" value="<%=@doctors.id %>" />
  <center>
    <%= submit_tag "Take Appointment", class: 'btn btn-primary btn-lg' %>
  </center>
<% end %>
