<%=button_to 'Edit',  edit_appointment_path(@appointment), method: :get %>
<center><h5>
<div class="form-group">
  <strong>Department :</strong>
  <input type="text" value = "<%= @appointment.doctor.department.name %>" readonly class="form-control"/>
</div>

<div class="form-group">
  <strong>Doctor :</strong>
  <input type="text" value = "<%= @appointment.doctor.user.name %>" readonly  class="form-control"/>
</div>

<div class="form-group">
  <strong>Time Slot:</strong>
  <input type="text" value = "<%= @appointment.time_slots %>" readonly class="form-control"/>
</div>

<div class="form-group">
  <strong>Date:</strong>
  <input type="text" value = "<%= @appointment.app_date %>" readonly class="form-control"/>
</div>

<div class="form-group">
  <strong>Symptoms:</strong>
  <input type="text" value = "<%= @appointment.symptoms %>" readonly class="form-control"/>
</div>
</h5></center>
