<%= form_for (appointment),:html => {class: "form-horizontal", role: "form"} do |f| %>
  <% if appointment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(appointment.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% appointment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= label_tag "Departments : " %>
    </div>
    <div class="col-sm-4">
      <%= f.collection_select :department_id, Department.all, :id, :name, {:prompt => 'Select'}, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= label_tag "Doctors : " %>
    </div>
    <div class="col-sm-4">
      <%= f.collection_select :doctor_id, doctors.each, :id, :name, {:prompt => 'Select'}, class:"form-control" %>
    </div>
  </div>
  <center>
    <%= f.submit "Check Availability", class: 'btn btn-primary btn-lg' %>
  </center>

<% end %>
