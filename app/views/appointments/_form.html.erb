<%= form_for (appointment),:html => {class: "form-horizontal", role: "form"} do |f| %>
  <% if appointment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(appointment.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% appointment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <div class="control-label col-sm-2"></div>
    <div class="control-label col-sm-2">
      <%= label_tag "Departments* : " %>
    </div>
    <div class="col-sm-4">
      <%= f.collection_select :department_id, Department.all, :id, :name, {:prompt => 'Select'}, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-2"></div>
    <div class="control-label col-sm-2">
      <%= label_tag "Doctors* : " %>
    </div>
    <div class="col-sm-4">
      <%= f.select :doctor_id, 'Select', {}, {:class => 'form-control',include_blank: true }%>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-2"></div>
    <div class="control-label col-sm-2">
      <%= f.label "Available Days* : " %>
    </div>
    <div class="col-sm-4">
      <%= f.select :app_date, 'Select', {}, {:class => 'form-control'} %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-2"></div>
    <div class="control-label col-sm-2">
      <%= f.label "Available Time slots* : " %>
    </div>
    <div class="col-sm-4">
      <%= f.select :time_slots, 'Select', {}, {:class => 'form-control', include_blank: true }%>
    </div>
  </div>


  <div class="form-group">
    <div class="control-label col-sm-2"></div>
    <div class="control-label col-sm-2">
      <%= f.label "Symptoms* : " %>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :symptoms, :class => 'form-control' %>
    </div>
  </div>

  <center>
    <%= f.submit "Submit", class: 'btn btn-primary btn-lg' %>
  </center>

<% end %>
