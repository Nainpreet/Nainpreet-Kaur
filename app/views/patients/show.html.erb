<center><h1 style="color:#428bca;margin-top:20px"> Profile </h1></center>
<div class= "form-horizontal">
  <h3>Designation : <b><%= @patient.role %></b></h3>
    <%=button_to  edit_user_registration_path, method: :get do %>
      <i class="glyphicon glyphicon-pencil"></i>
    <% end %>
  <div class="form-group">
    <div class="control-label col-sm-4">
      <%= label_tag "Date of Birth : " %>
    </div>
    <div class="col-sm-4">
      <input type="text" value = "<%= @patient.dob %>" readonly size="35" class="form-control"/>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-sm-4">
      <%= label_tag "Gender : " %>
    </div>
    <div class="col-sm-4">
       <input type="text" value = "<%= @patient.gender %>" readonly size="35" class="form-control"/>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-sm-4">
      <%= label_tag "Address : " %>
    </div>
    <div class="col-sm-4">
      <textarea cols="35" readonly class="form-control"><%= @patient.address.titleize %></textarea>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-sm-4">
      <%= label_tag "Phone : " %>
    </div>
    <div class="col-sm-4">
      <input type="text" value = "<%= @patient.phone %>" readonly size="35" class="form-control"/>
    </div>
  </div>

</div>
