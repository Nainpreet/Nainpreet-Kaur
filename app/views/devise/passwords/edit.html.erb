<%= bootstrap_devise_error_messages! %>
<div class="panel panel-default devise-bs" style="margin-top:50px;width:800px;margin-left:200px">
  <div class="panel-heading">
    <h4 style="color:#428bca;text-align:center"><%= t('.change_your_password', default: 'Change your password') %></h4>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-horizontal", role: 'form' }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <div class="col-sm-1"></div>
        <div class="control-label col-sm-3">
          <%= f.label :password, t('.new_password', default: 'New password') %>
        </div>
        <div class="col-sm-5">
          <%= f.password_field :password, autofocus: true, class: 'form-control'  %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-1"></div>
        <div class="control-label col-sm-3">
         <%= f.label :password_confirmation, t('.confirm_new_password', default: 'Confirm new password') %>
        </div>
        <div class="col-sm-5">
         <%= f.password_field :password_confirmation, class: 'form-control'  %>
        </div>
      </div>
      <center>
        <%= f.submit t('.change_my_password', default: 'Change my password'), class: 'btn btn-primary' %>
      </center>
    <% end %>
  </div><br>
  <center>
    <%= render 'devise/shared/links' %>
  </center>
</div>
