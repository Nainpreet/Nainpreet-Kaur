<%= bootstrap_devise_error_messages! %>
<div class="panel panel-default devise-bs" style="margin-top:50px;width:800px;margin-left:200px">
  <div class="panel-heading">
    <h4 style="color:#428bca;text-align:center"><%= t('.forgot_your_password', default: 'Forgot your password?') %></h4>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, role: "form"}) do |f| %>
    <div class="form-group">
      <div class="col-sm-1"></div>
      <div class="control-label col-sm-1">
        <%= f.label :email %>
      </div>
      <div class="col-sm-4">
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>
    </div>
    <%= f.submit t('.send_me_reset_password_instructions', default: 'Send me reset password instructions'), class: 'btn btn-primary' %>
  <% end %>
</div><br>
<center>
  <%= render 'devise/shared/links' %>
</center>
</div>
