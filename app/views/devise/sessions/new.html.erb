<%= bootstrap_devise_error_messages! %>
<center><h2 style="color:#428bca;margin-top:20px"><%= t('.sign_in', default: 'Sign in') %></h2></center>
<div class="container">
  <div class='row'>
    <div class='col-md-2'></div>
    <div class='col-md-8'>
     <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form', id: 'msform'}) do |f| %>
      <fieldset  class="responsive-fieldset">
        <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
        <%= f.password_field :password, placeholder: "Password"%>
        <%= f.submit  t('.sign_in', default: 'Sign in'), class: 'action-button'%>
        <% if devise_mapping.rememberable? %>
          <div class="checkbox">
            <%= f.label "Remember me" do %>
              <%= f.check_box :remember_me %><%= t('.remember_me', default: 'Remember me') %>
            <% end %>
          </div>
        <% end %>
      <% end %>
      <%= render 'devise/shared/links' %>
    </fieldset>
   </div>
  <div class='col-md-2'></div>
 </div>
</div
