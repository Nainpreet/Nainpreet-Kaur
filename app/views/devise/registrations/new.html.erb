<%= bootstrap_devise_error_messages! %>
<%=button_to 'Sign in', new_user_session_path, method: :get, class: 'btn btn-primary' %>
<center><h2 style="color:#428bca;margin-top:-15px"><%= t('.Sign_Up', default: 'Sign Up') %></h2></center>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form', id: 'msform' }) do |f| %>
  <ul id="progressbar">
    <li class="active"> Account Setup </li>
    <li> Profile Setup </li>
  </ul>
  <fieldset>
      <h2 class="fs-title" style="color:#428bca">Create your account </h2>
      <%= f.email_field :email, autofocus: true, placeholder: "Email", :required => true%>
      <%= f.password_field :password, placeholder: "Password", :required => true%>
      <%= f.password_field :password_confirmation, placeholder: "Confirm Password", :required => true%>
      <input type="button" class="next action-button" value="Next" name="next"/>
  </fieldset>

  <fieldset>
      <h2 class="fs-title" style="color:#428bca">Create your profile </h2>
        <%= f.text_field :name, autofocus: true, placeholder: "Name", :required => true %>
        <%= f.text_field :dob, :id => 'datepicker', placeholder: "Date Of Birth", :required => true %>
      <div style="float:center">
        <div class="fieldgroup">
         <%= f.radio_button :gender, 'Female', :checked=> true %>Female
        </div>
        <div class="fieldgroup">
         <%= f.radio_button :gender, 'Male' %>Male
        </div>
        <div  class="fieldgroup">
         <%= f.radio_button :gender, 'transgender' %>Transgender
        </div>
      </div>
        <%= f.text_area :address, autofocus: true, cols:35, placeholder: "Address", :required => true %>
        <%= f.text_field :phone, autofocus: true, placeholder: "Phone", :required => true%>
      <div style="float:left;margin-left:80px">
       <div  class="fieldgroup">
         <%= f.radio_button :role, 'Doctor' %>Doctor
       </div>
       <div  class="fieldgroup">
         <%= f.radio_button :role, 'Patient' %>Patient
       </div>
      </div>
        <input type="button" class="previous action-button" value="Previous" name="previous"/>
        <input type="submit" class="submit action-button" value="Sign Up" name="submit"/>

  </fieldset>
<!-- jquery easing plugin -->
  <script src="//cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js" type="text/javascript"> </script>

<% end %>
