<%= bootstrap_devise_error_messages! %>
<div class="panel panel-default devise-bs">
  <div class="panel-heading">
    <center><h3><%= t('.sign_up', default: 'Sign Up') %></h3></center>
  </div>
  <div class="form-group">
    <p><b><i><h5>   All fields are mandatory.  </h5></i></b></p>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }) do |f| %>
      <div class="form-group">
        <%= f.label :Name %>
        <%= f.text_field :name, autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.label :Date_of_birth %>
        <%= f.text_field :dob, :id => 'datepicker' %>
      </div>
      <div class="form-group">
        <%= f.label :Gender %>
        <%= f.radio_button :gender,'Female', :checked=> true %>Female
        <%= f.radio_button :gender, 'Male' %>Male
        <%= f.radio_button :gender, 'transgender' %>Transgender
      </div>
      <div class="form-group">
        <%= f.label :Address %>
        <%= f.text_area :address, autofocus: true, cols:35 %>
      </div>
      <div class="form-group">
        <%= f.label :Phone %>
        <%= f.text_field :phone, autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.label :Role %>
        <%= f.radio_button :role, 'Doctor' %>Doctor
        <%= f.radio_button :role, 'Patient' %>Patient
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation%>
      </div>
      <%= f.submit t('.sign_up', default: 'Sign up'), class: 'btn btn-primary' %>
    <% end %>

  </div>
</div>
<%= render 'devise/shared/links' %>
