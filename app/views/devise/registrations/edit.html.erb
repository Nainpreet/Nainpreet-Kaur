<%= bootstrap_devise_error_messages! %>
<p style="float:right">
<%= link_to t('.back', default: 'Back'), :back %> |
<%= link_to t('.delete_my_account', default: 'Delete my account'), registration_path(resource_name), data: { confirm: t('.are_you_sure', default: "Are you sure?") }, method: :delete %>
</p>
<div style="margin-top:20px">
  <center><h1 style="color:#428bca"> Edit Profile </h1></center>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal", method: :put }) do |f| %>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :email %>
    </div>
    <div class="col-sm-4">
      <%= f.email_field :email, autofocus: true, class: 'form-control'%>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-2">
     <%= f.label :Name %>
    </div>
    <div class="col-sm-4">
     <%= f.text_field :name, autofocus: true, class: 'form-control'%>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-2">
     <%= f.label :Date_of_birth %>
    </div>
    <div class="col-sm-4">
     <%= f.text_field :dob, :id => 'datepicker', class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-2">
     <%= f.label :Gender %>
    </div>
    <div class="col-sm-4">
     <%= f.radio_button :gender,'Female' %>Female
     <%= f.radio_button :gender, 'Male' %>Male
     <%= f.radio_button :gender, 'transgender' %>Transgender
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-2">
     <%= f.label :Address %>
    </div>
    <div class="col-sm-4">
     <%= f.text_area :address, autofocus: true, cols:35, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-2">
     <%= f.label :Phone %>
    </div>
    <div class="col-sm-4">
     <%= f.text_field :phone, autofocus: true, class: 'form-control' %>
     <% if resource.is_verified %>
        You're mobile number is verified.
     <% end%>
    </div>
  </div>
  <% unless current_user.provider %>
    <div class="form-group">
      <div class="control-label col-sm-2">
       <%= f.label :password %><i>(<%= t('.If want to change password', default: 'If you want to change password') %>)</i>
      </div>
      <div class="col-sm-4">
       <%= f.password_field :password, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
       <%= f.label :password_confirmation %>
      </div>
      <div class="col-sm-4">
       <%= f.password_field :password_confirmation, class: 'form-control'%>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
       <%= f.label :current_password %> <i>(<%= t('.Need to confirm your changes', default: 'Need to confirm your changes') %>)</i>
      </div>
      <div class="col-sm-4">
       <%= f.password_field :current_password, class: 'form-control' %>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <div class="col-sm-5">
      <%= f.submit t('.update', default: 'Update'), class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
